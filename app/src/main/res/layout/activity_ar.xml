<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ARActivity"
    android:orientation="vertical">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/arFragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/field_Directivity_dBi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black_20"
                    android:text="@string/Directivity_dBi"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/meta_Directivity_dBi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black_20"
                    android:text="@string/meta_NF"
                    android:textColor="@color/white" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/field_HHPBW_deg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black_20"
                    android:text="@string/HHPBW_deg"
                    android:textColor="@color/white"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/meta_HHPBW_deg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black_20"
                    android:text="@string/meta_NF"
                    android:textColor="@color/white"
                    android:visibility="visible" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/field_VHPBW_deg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black_20"
                    android:text="@string/VHPBW_deg"
                    android:textColor="@color/white"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/meta_VHPBW_deg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black_20"
                    android:text="@string/meta_NF"
                    android:textColor="@color/white"
                    android:visibility="visible" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/visualCueBottomSheet"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="1000dp"
            android:layout_marginBottom="59dp"
            android:src="@drawable/arrow_up"
            android:visibility="gone"
            tools:src="@drawable/arrow_up">

        </pl.droidsonroids.gif.GifImageView>

        <TextView
            android:id="@+id/visualCue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_background"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="@string/ar_hint"
            android:layout_centerInParent="true"/>

    </RelativeLayout>


</RelativeLayout>